{%- comment -%}
  Product Card Snippet
  Usage: {% render 'product-card', product: product, show_vendor: false %}
{%- endcomment -%}

{%- liquid
  assign show_vendor = show_vendor | default: false
  assign current_variant = product.selected_or_first_available_variant
  assign compare_at_price = current_variant.compare_at_price
  assign price = current_variant.price
  assign on_sale = false
  if compare_at_price > price
    assign on_sale = true
  endif
-%}

<div class="product-card" data-product-card>
  <div class="product-card__media">
    <a href="{{ product.url }}" class="product-card__link">
      <div class="product-card__image-wrapper">
        {% if product.featured_media %}
          {{ product.featured_media | image_url: width: 600 | image_tag:
            class: 'product-card__image product-card__image--primary',
            loading: 'lazy',
            alt: product.title
          }}
          {% if product.media[1] != nil and product.media.size > 1 %}
            {{ product.media[1] | image_url: width: 600 | image_tag:
              class: 'product-card__image product-card__image--hover',
              loading: 'lazy',
              alt: product.title
            }}
          {% endif %}
        {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'product-card__placeholder' }}
        {% endif %}
        <div class="product-card__overlay"></div>
      </div>
    </a>

    <div class="product-card__badges">
      {% if on_sale %}
        {%- assign sale_percent = compare_at_price | minus: price | times: 100 | divided_by: compare_at_price | round -%}
        <span class="product-card__badge product-card__badge--sale">
          <span class="product-card__badge-icon">ðŸ”¥</span>
          {{ sale_percent }}% OFF
        </span>
      {% endif %}
      {% if product.available == false %}
        <span class="product-card__badge product-card__badge--sold-out">Sold Out</span>
      {% endif %}
    </div>

    <div class="product-card__quick-view" data-quick-view="{{ product.url }}">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
        <circle cx="12" cy="12" r="3"></circle>
      </svg>
    </div>

    <div class="product-card__actions">
      {% if product.available %}
        <button
          type="button"
          class="product-card__quick-add"
          data-product-id="{{ product.id }}"
          data-variant-id="{{ current_variant.id }}"
          aria-label="Quick add to cart"
        >
          {% render 'icon-cart' %}
          <span>Add to Cart</span>
        </button>
      {% endif %}
    </div>
  </div>

  <div class="product-card__info">
    {% if show_vendor and product.vendor %}
      <p class="product-card__vendor">{{ product.vendor }}</p>
    {% endif %}

    <h3 class="product-card__title">
      <a href="{{ product.url }}">{{ product.title }}</a>
    </h3>

    <div class="product-card__price">
      {% if on_sale %}
        <span class="product-card__price--sale">{{ price | money }}</span>
        <span class="product-card__price--compare">{{ compare_at_price | money }}</span>
      {% else %}
        <span class="product-card__price--regular">{{ price | money }}</span>
      {% endif %}
    </div>

    {% if product.variants.size > 1 %}
      <p class="product-card__variants">{{ product.variants.size }} options</p>
    {% endif %}
  </div>
</div>

<style>
  .product-card {
    position: relative;
    border-radius: calc(var(--border-radius) * 1.5);
    background: var(--color-background);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    overflow: hidden;
  }

  .product-card:hover {
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
  }

  .product-card__media {
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    aspect-ratio: 1;
  }

  .product-card__link {
    display: block;
    width: 100%;
    height: 100%;
  }

  .product-card__image-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .product-card__image--hover {
    position: absolute;
    inset: 0;
    opacity: 0;
  }

  .product-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.3) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .product-card:hover .product-card__overlay {
    opacity: 1;
  }

  .product-card:hover .product-card__image--primary {
    opacity: 0;
    transform: scale(1.1);
  }

  .product-card:hover .product-card__image--hover {
    opacity: 1;
    transform: scale(1.05);
  }

  .product-card__placeholder {
    width: 100%;
    height: 100%;
    background: var(--color-background-secondary);
  }

  .product-card__badges {
    position: absolute;
    top: 12px;
    left: 12px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    z-index: 3;
  }

  .product-card__badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 6px 12px;
    border-radius: 50px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .product-card__badge-icon {
    font-size: 12px;
  }

  .product-card__badge--sale {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(239, 68, 68, 0.4);
    animation: badge-pulse 2s ease-in-out infinite;
  }

  @keyframes badge-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .product-card__badge--sold-out {
    background: rgba(0, 0, 0, 0.8);
    color: white;
  }

  .product-card__badge--new {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(16, 185, 129, 0.4);
  }

  .product-card__quick-view {
    position: absolute;
    top: 12px;
    right: 12px;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: 50%;
    color: var(--color-text);
    cursor: pointer;
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 3;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .product-card:hover .product-card__quick-view {
    opacity: 1;
    transform: translateY(0);
  }

  .product-card__quick-view:hover {
    background: var(--color-primary);
    color: white;
    transform: scale(1.1);
  }

  .product-card__actions {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 16px;
    opacity: 0;
    transform: translateY(100%);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    z-index: 3;
  }

  .product-card:hover .product-card__actions {
    opacity: 1;
    transform: translateY(0);
  }

  .product-card__quick-add {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 14px 20px;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: white;
    border: none;
    border-radius: var(--border-radius);
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(99, 102, 241, 0.4);
  }

  .product-card__quick-add:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(99, 102, 241, 0.5);
  }

  .product-card__quick-add:active {
    transform: translateY(0);
  }

  .product-card__quick-add svg {
    width: 18px;
    height: 18px;
  }

  .product-card__info {
    padding: 20px 16px 16px;
    background: var(--color-background);
  }

  .product-card__vendor {
    font-size: 11px;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 6px;
    font-weight: 600;
  }

  .product-card__title {
    font-size: 15px;
    font-weight: 600;
    margin-bottom: 10px;
    line-height: 1.4;
    min-height: 42px;
  }

  .product-card__title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s ease;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-card__title a:hover {
    color: var(--color-primary);
  }

  .product-card__price {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 16px;
    flex-wrap: wrap;
  }

  .product-card__price--regular {
    font-weight: 700;
    color: var(--color-text);
  }

  .product-card__price--sale {
    font-weight: 700;
    font-size: 18px;
    color: var(--color-sale);
  }

  .product-card__price--compare {
    font-size: 14px;
    color: var(--color-text-light);
    text-decoration: line-through;
  }

  .product-card__variants {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-size: 12px;
    color: var(--color-text-light);
    margin-top: 8px;
    padding: 4px 10px;
    background: var(--color-background-secondary);
    border-radius: 50px;
  }

  @media (max-width: 767px) {
    .product-card__actions {
      opacity: 1;
      transform: translateY(0);
      padding: 12px;
    }

    .product-card__quick-add span {
      display: none;
    }

    .product-card__quick-add {
      width: 44px;
      height: 44px;
      position: absolute;
      bottom: 12px;
      right: 12px;
      left: auto;
      padding: 0;
      border-radius: 50%;
      box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
    }

    .product-card__quick-view {
      opacity: 1;
      transform: translateY(0);
    }

    .product-card__info {
      padding: 14px 12px 12px;
    }

    .product-card__title {
      font-size: 14px;
      min-height: auto;
    }
  }
</style>
