{%- style -%}
  .trust-badges {
    padding: 60px 0;
    background: var(--color-background-secondary);
  }

  .trust-badges__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 32px;
  }

  .trust-badge {
    text-align: center;
    padding: 32px 20px;
    background: var(--color-background);
    border-radius: var(--border-radius);
    transition: all 0.3s ease;
  }

  .trust-badge:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
  }

  .trust-badge__icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 20px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .trust-badge__icon svg {
    width: 28px;
    height: 28px;
  }

  .trust-badge__title {
    font-size: 16px;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 8px;
  }

  .trust-badge__text {
    font-size: 14px;
    color: var(--color-text-light);
    line-height: 1.5;
  }

  @media (max-width: 991px) {
    .trust-badges__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 575px) {
    .trust-badges {
      padding: 40px 0;
    }

    .trust-badges__grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .trust-badge {
      display: flex;
      align-items: center;
      text-align: left;
      padding: 20px 24px;
      gap: 16px;
    }

    .trust-badge__icon {
      width: 50px;
      height: 50px;
      margin: 0;
      flex-shrink: 0;
    }

    .trust-badge__icon svg {
      width: 24px;
      height: 24px;
    }

    .trust-badge__content {
      flex: 1;
    }

    .trust-badge__title {
      margin-bottom: 4px;
    }
  }
{%- endstyle -%}

<section class="trust-badges">
  <div class="container">
    <div class="trust-badges__grid">
      {% for block in section.blocks %}
        <div class="trust-badge" {{ block.shopify_attributes }}>
          <div class="trust-badge__icon">
            {% case block.settings.icon %}
              {% when 'truck' %}
                {% render 'icon-truck' %}
              {% when 'shield' %}
                {% render 'icon-shield' %}
              {% when 'return' %}
                {% render 'icon-return' %}
              {% when 'cash' %}
                {% render 'icon-cash' %}
              {% when 'support' %}
                {% render 'icon-support' %}
              {% when 'secure' %}
                {% render 'icon-lock' %}
              {% else %}
                {% render 'icon-check' %}
            {% endcase %}
          </div>
          <div class="trust-badge__content">
            <h3 class="trust-badge__title">{{ block.settings.title }}</h3>
            <p class="trust-badge__text">{{ block.settings.text }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Trust Badges",
  "tag": "section",
  "class": "section-trust-badges",
  "settings": [],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "truck", "label": "Truck (Shipping)" },
            { "value": "shield", "label": "Shield (Protection)" },
            { "value": "return", "label": "Return (Easy Returns)" },
            { "value": "cash", "label": "Cash (COD)" },
            { "value": "support", "label": "Support (24/7)" },
            { "value": "secure", "label": "Lock (Secure)" }
          ],
          "default": "truck"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Free Shipping"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "On all prepaid orders across India"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Badges",
      "blocks": [
        { "type": "badge", "settings": { "icon": "truck", "title": "Free Shipping", "text": "On all prepaid and COD orders across India" }},
        { "type": "badge", "settings": { "icon": "cash", "title": "Cash on Delivery", "text": "Pay securely with cash when your order arrives" }},
        { "type": "badge", "settings": { "icon": "return", "title": "7-Day Easy Returns", "text": "Not happy? Return it easily within 7 days" }},
        { "type": "badge", "settings": { "icon": "secure", "title": "Secure Payments", "text": "100% secure payment with SSL encryption" }}
      ]
    }
  ]
}
{% endschema %}
