{%- style -%}
  .collections-page {
    padding: var(--section-spacing) 0;
  }

  .collections-page__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .collections-page__title {
    font-size: clamp(28px, 4vw, 42px);
    font-weight: 700;
  }

  .collections-page__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .collections-page__card {
    position: relative;
    border-radius: var(--border-radius);
    overflow: hidden;
    aspect-ratio: 4/3;
  }

  .collections-page__card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .collections-page__card:hover .collections-page__card-image {
    transform: scale(1.08);
  }

  .collections-page__card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 60%);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 24px;
  }

  .collections-page__card-title {
    font-size: 20px;
    font-weight: 700;
    color: white;
    margin-bottom: 4px;
  }

  .collections-page__card-count {
    font-size: 14px;
    color: rgba(255,255,255,0.8);
  }

  .collections-page__card-link {
    position: absolute;
    inset: 0;
  }

  @media (max-width: 991px) {
    .collections-page__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 575px) {
    .collections-page__grid {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

<section class="collections-page">
  <div class="container">
    <div class="collections-page__header">
      <h1 class="collections-page__title">{{ section.settings.title }}</h1>
    </div>

    <div class="collections-page__grid">
      {% for collection in collections %}
        {% unless collection.handle == 'all' %}
          <div class="collections-page__card">
            {% if collection.featured_image %}
              {{ collection.featured_image | image_url: width: 600 | image_tag: class: 'collections-page__card-image', loading: 'lazy' }}
            {% else %}
              {{ 'collection-1' | placeholder_svg_tag: 'collections-page__card-image' }}
            {% endif %}
            <div class="collections-page__card-overlay">
              <h2 class="collections-page__card-title">{{ collection.title }}</h2>
              <p class="collections-page__card-count">{{ collection.products_count }} products</p>
            </div>
            <a href="{{ collection.url }}" class="collections-page__card-link" aria-label="{{ collection.title }}"></a>
          </div>
        {% endunless %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "All Collections",
  "tag": "section",
  "class": "section-main-list-collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Collections"
    },
    {
      "type": "select",
      "id": "sort",
      "label": "Sort",
      "options": [
        { "value": "alphabetical", "label": "Alphabetically" },
        { "value": "alphabetical_reversed", "label": "Alphabetically (Reverse)" },
        { "value": "date", "label": "Date (Oldest First)" },
        { "value": "date_reversed", "label": "Date (Newest First)" },
        { "value": "products_count", "label": "Product Count (Low to High)" },
        { "value": "products_count_reversed", "label": "Product Count (High to Low)" }
      ],
      "default": "alphabetical"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image Ratio",
      "options": [
        { "value": "adapt", "label": "Adapt to Image" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "square", "label": "Square" }
      ],
      "default": "adapt"
    }
  ]
}
{% endschema %}
