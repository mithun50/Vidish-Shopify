{{ 'section-page-header.css' | asset_url | stylesheet_tag }}

<div class="page-header section-{{ section.id }}">
  <div class="container">
    {%- if section.settings.show_title -%}
      <h1 class="page-header__title">{{ page.title }}</h1>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Page Header",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show page title",
      "default": true
    }
  ]
}
{% endschema %}
