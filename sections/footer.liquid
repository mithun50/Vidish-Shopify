{%- style -%}
  .footer {
    background: var(--color-background-secondary);
    padding: 80px 0 30px;
    margin-top: var(--section-spacing);
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1.5fr repeat(3, 1fr);
    gap: 48px;
  }

  .footer__brand {
    max-width: 300px;
  }

  .footer__logo {
    margin-bottom: 20px;
  }

  .footer__logo img,
  .footer__logo-img {
    max-height: 50px;
    width: auto;
    border-radius: 8px;
  }

  .footer__logo-text {
    font-size: 24px;
    font-weight: 700;
    color: var(--color-text);
  }

  .footer__description {
    color: var(--color-text-light);
    font-size: 14px;
    line-height: 1.7;
    margin-bottom: 24px;
  }

  .footer__social {
    display: flex;
    gap: 12px;
  }

  .footer__social-link {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text);
    transition: all 0.3s ease;
  }

  .footer__social-link:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-3px);
  }

  .footer__social-link svg {
    width: 18px;
    height: 18px;
  }

  .footer__column-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 20px;
  }

  .footer__links {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer__link {
    color: var(--color-text-light);
    text-decoration: none;
    font-size: 14px;
    transition: color 0.2s ease;
  }

  .footer__link:hover {
    color: var(--color-primary);
  }

  .footer__newsletter {
    max-width: 100%;
  }

  .footer__newsletter-text {
    color: var(--color-text-light);
    font-size: 14px;
    margin-bottom: 16px;
  }

  .footer__newsletter-form {
    display: flex;
    gap: 8px;
  }

  .footer__newsletter-input {
    flex: 1;
    padding: 12px 16px;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    font-size: 14px;
    background: var(--color-background);
    transition: border-color 0.2s ease;
  }

  .footer__newsletter-input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .footer__newsletter-btn {
    padding: 12px 24px;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: var(--border-radius);
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .footer__newsletter-btn:hover {
    background: var(--color-primary-dark);
  }

  .footer__bottom {
    margin-top: 60px;
    padding-top: 30px;
    border-top: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 16px;
  }

  .footer__copyright {
    color: var(--color-text-light);
    font-size: 14px;
  }

  .footer__payments {
    display: flex;
    gap: 8px;
  }

  .footer__payments img {
    height: 28px;
    width: auto;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .footer__payments img:hover {
    opacity: 1;
  }

  .footer__powered {
    margin-top: 24px;
    padding-top: 24px;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .footer__powered-text {
    font-size: 13px;
    color: var(--color-text-light);
    margin-bottom: 12px;
  }

  .footer__powered-text a {
    color: var(--color-primary);
    font-weight: 600;
    text-decoration: none;
  }

  .footer__powered-text a:hover {
    text-decoration: underline;
  }

  .footer__powered-links {
    display: flex;
    justify-content: center;
    gap: 16px;
  }

  .footer__powered-link {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-light);
    transition: all 0.3s ease;
  }

  .footer__powered-link:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  .footer__powered-link svg {
    width: 14px;
    height: 14px;
  }

  @media (max-width: 991px) {
    .footer__grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer__brand {
      grid-column: span 2;
      max-width: 100%;
    }
  }

  @media (max-width: 575px) {
    .footer {
      padding: 60px 0 24px;
    }

    .footer__grid {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .footer__brand {
      grid-column: span 1;
    }

    .footer__newsletter-form {
      flex-direction: column;
    }

    .footer__bottom {
      flex-direction: column;
      text-align: center;
    }
  }
{%- endstyle -%}

<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__brand">
        <div class="footer__logo">
          {% if section.settings.logo != blank %}
            {{ section.settings.logo | image_url: width: 200 | image_tag: alt: shop.name, class: 'footer__logo-img' }}
          {% else %}
            <img src="{{ 'vidish-logo.jpg' | asset_url }}" alt="{{ shop.name }}" class="footer__logo-img" width="150" height="auto">
          {% endif %}
        </div>
        {% if section.settings.description != blank %}
          <p class="footer__description">{{ section.settings.description }}</p>
        {% endif %}
        <div class="footer__social">
          {% if settings.social_instagram != blank %}
            <a href="{{ settings.social_instagram }}" class="footer__social-link" aria-label="Instagram" target="_blank" rel="noopener">
              {% render 'icon-instagram' %}
            </a>
          {% endif %}
          {% if settings.social_facebook != blank %}
            <a href="{{ settings.social_facebook }}" class="footer__social-link" aria-label="Facebook" target="_blank" rel="noopener">
              {% render 'icon-facebook' %}
            </a>
          {% endif %}
          {% if settings.social_twitter != blank %}
            <a href="{{ settings.social_twitter }}" class="footer__social-link" aria-label="Twitter" target="_blank" rel="noopener">
              {% render 'icon-twitter' %}
            </a>
          {% endif %}
          {% if settings.social_youtube != blank %}
            <a href="{{ settings.social_youtube }}" class="footer__social-link" aria-label="YouTube" target="_blank" rel="noopener">
              {% render 'icon-youtube' %}
            </a>
          {% endif %}
          {% if settings.social_whatsapp != blank %}
            <a href="{{ settings.social_whatsapp }}" class="footer__social-link" aria-label="WhatsApp" target="_blank" rel="noopener">
              {% render 'icon-whatsapp' %}
            </a>
          {% endif %}
        </div>
      </div>

      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'menu' %}
            <div class="footer__column" {{ block.shopify_attributes }}>
              {% if block.settings.title != blank %}
                <h4 class="footer__column-title">{{ block.settings.title }}</h4>
              {% endif %}
              <nav class="footer__links">
                {% for link in block.settings.menu.links %}
                  <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                {% endfor %}
              </nav>
            </div>

          {% when 'newsletter' %}
            <div class="footer__column footer__newsletter" {{ block.shopify_attributes }}>
              {% if block.settings.title != blank %}
                <h4 class="footer__column-title">{{ block.settings.title }}</h4>
              {% endif %}
              {% if block.settings.text != blank %}
                <p class="footer__newsletter-text">{{ block.settings.text }}</p>
              {% endif %}
              {% form 'customer', class: 'footer__newsletter-form' %}
                <input
                  type="email"
                  name="contact[email]"
                  class="footer__newsletter-input"
                  placeholder="{{ block.settings.placeholder | default: 'Enter your email' }}"
                  required
                  autocomplete="email"
                >
                <button type="submit" class="footer__newsletter-btn">
                  {{ block.settings.button_text | default: 'Subscribe' }}
                </button>
              {% endform %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}
      </p>
      {% if section.settings.show_payment_icons %}
        <div class="footer__payments">
          {{ shop.enabled_payment_types | payment_type_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="footer__powered">
      <p class="footer__powered-text">Website powered by <a href="https://www.instagram.com/nexgenxplorerr" target="_blank" rel="noopener">NextGenX</a></p>
      <div class="footer__powered-links">
        <a href="https://www.instagram.com/nexgenxplorerr?igsh=YWV0ZHRuZDZ0M2V3" class="footer__powered-link" aria-label="Instagram" target="_blank" rel="noopener">
          {% render 'icon-instagram' %}
        </a>
        <a href="https://youtube.com/@nexgenxplorer?si=UG-wBC8UIyeT4bbw" class="footer__powered-link" aria-label="YouTube" target="_blank" rel="noopener">
          {% render 'icon-youtube' %}
        </a>
        <a href="https://play.google.com/store/apps/dev?id=8262374975871504599" class="footer__powered-link" aria-label="Play Store" target="_blank" rel="noopener">
          {% render 'icon-playstore' %}
        </a>
        <a href="mailto:nxgextra@gmail.com" class="footer__powered-link" aria-label="Email">
          {% render 'icon-email' %}
        </a>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Your one-stop shop for quality lifestyle products. We deliver happiness to your doorstep."
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "All rights reserved."
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show Payment Icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Stay Connected"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Get exclusive deals and early access to new products."
        },
        {
          "type": "text",
          "id": "placeholder",
          "label": "Input Placeholder",
          "default": "Enter your email"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Subscribe"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      { "type": "menu" },
      { "type": "menu" },
      { "type": "newsletter" }
    ]
  }
}
{% endschema %}
