{%- style -%}
  .cart-page {
    padding: var(--section-spacing) 0;
  }

  .cart-page__header {
    margin-bottom: 40px;
  }

  .cart-page__title {
    font-size: clamp(28px, 4vw, 36px);
    font-weight: 700;
  }

  .cart-page__grid {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 48px;
    align-items: start;
  }

  .cart-page__items {
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    overflow: hidden;
  }

  .cart-page__item {
    display: grid;
    grid-template-columns: 100px 1fr auto auto;
    gap: 20px;
    padding: 24px;
    align-items: center;
    border-bottom: 1px solid var(--color-border);
  }

  .cart-page__item:last-child {
    border-bottom: none;
  }

  .cart-page__item-image {
    border-radius: calc(var(--border-radius) / 2);
    overflow: hidden;
    background: var(--color-background-secondary);
  }

  .cart-page__item-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .cart-page__item-info {
    min-width: 0;
  }

  .cart-page__item-title {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 4px;
  }

  .cart-page__item-title a {
    color: var(--color-text);
    text-decoration: none;
  }

  .cart-page__item-variant {
    font-size: 14px;
    color: var(--color-text-light);
    margin-bottom: 8px;
  }

  .cart-page__item-price {
    font-size: 15px;
    font-weight: 600;
  }

  .cart-page__item-quantity {
    display: flex;
    align-items: center;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
  }

  .cart-page__qty-btn {
    background: none;
    border: none;
    padding: 10px 14px;
    cursor: pointer;
    color: var(--color-text);
    transition: background 0.2s ease;
  }

  .cart-page__qty-btn:hover {
    background: var(--color-background-secondary);
  }

  .cart-page__qty-btn svg {
    width: 14px;
    height: 14px;
  }

  .cart-page__qty-input {
    width: 50px;
    text-align: center;
    border: none;
    font-size: 15px;
    font-weight: 600;
    -moz-appearance: textfield;
  }

  .cart-page__qty-input::-webkit-outer-spin-button,
  .cart-page__qty-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .cart-page__item-remove {
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: var(--color-text-light);
    transition: color 0.2s ease;
  }

  .cart-page__item-remove:hover {
    color: var(--color-sale);
  }

  .cart-page__item-remove svg {
    width: 18px;
    height: 18px;
  }

  .cart-page__summary {
    background: var(--color-background-secondary);
    border-radius: var(--border-radius);
    padding: 32px;
    position: sticky;
    top: 100px;
  }

  .cart-page__summary-title {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--color-border);
  }

  .cart-page__summary-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 12px;
    font-size: 15px;
  }

  .cart-page__summary-total {
    display: flex;
    justify-content: space-between;
    font-size: 18px;
    font-weight: 700;
    padding-top: 16px;
    margin-top: 16px;
    border-top: 1px solid var(--color-border);
  }

  .cart-page__note {
    margin: 24px 0;
  }

  .cart-page__note-label {
    display: block;
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .cart-page__note-input {
    width: 100%;
    padding: 12px;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    font-size: 14px;
    resize: none;
    height: 80px;
    font-family: inherit;
  }

  .cart-page__checkout {
    width: 100%;
    padding: 16px;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: var(--border-radius);
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s ease;
    margin-bottom: 12px;
  }

  .cart-page__checkout:hover {
    background: var(--color-primary-dark);
  }

  .cart-page__continue {
    display: block;
    text-align: center;
    color: var(--color-text-light);
    font-size: 14px;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .cart-page__continue:hover {
    color: var(--color-primary);
  }

  .cart-page__empty {
    text-align: center;
    padding: 80px 20px;
  }

  .cart-page__empty-icon {
    width: 100px;
    height: 100px;
    background: var(--color-background-secondary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 24px;
    color: var(--color-text-light);
  }

  .cart-page__empty-icon svg {
    width: 44px;
    height: 44px;
  }

  .cart-page__empty-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 12px;
  }

  .cart-page__empty-text {
    color: var(--color-text-light);
    margin-bottom: 24px;
  }

  .cart-page__empty-btn {
    display: inline-block;
    padding: 16px 32px;
    background: var(--color-primary);
    color: white;
    border-radius: var(--border-radius);
    font-weight: 600;
    text-decoration: none;
    transition: background 0.2s ease;
  }

  .cart-page__empty-btn:hover {
    background: var(--color-primary-dark);
  }

  @media (max-width: 991px) {
    .cart-page__grid {
      grid-template-columns: 1fr;
    }

    .cart-page__summary {
      position: static;
    }
  }

  @media (max-width: 767px) {
    .cart-page__item {
      grid-template-columns: 80px 1fr;
      gap: 16px;
    }

    .cart-page__item-quantity,
    .cart-page__item-remove {
      grid-column: 2;
    }

    .cart-page__item-quantity {
      justify-self: start;
    }

    .cart-page__item-remove {
      justify-self: end;
      margin-top: -40px;
    }
  }
{%- endstyle -%}

<section class="cart-page">
  <div class="container">
    <div class="cart-page__header">
      <h1 class="cart-page__title">Shopping Cart</h1>
    </div>

    {% if cart.item_count > 0 %}
      <div class="cart-page__grid">
        <div class="cart-page__items">
          {% for item in cart.items %}
            <div class="cart-page__item" data-cart-item data-line-item="{{ forloop.index }}">
              <div class="cart-page__item-image">
                {% if item.image %}
                  {{ item.image | image_url: width: 200 | image_tag: loading: 'lazy', alt: item.title }}
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag }}
                {% endif %}
              </div>

              <div class="cart-page__item-info">
                <h3 class="cart-page__item-title">
                  <a href="{{ item.url }}">{{ item.product.title }}</a>
                </h3>
                {% unless item.product.has_only_default_variant %}
                  <p class="cart-page__item-variant">{{ item.variant.title }}</p>
                {% endunless %}
                <p class="cart-page__item-price">{{ item.final_line_price | money }}</p>
              </div>

              <div class="cart-page__item-quantity">
                <button type="button" class="cart-page__qty-btn" data-qty-decrease aria-label="Decrease">
                  {% render 'icon-minus' %}
                </button>
                <input type="number" class="cart-page__qty-input" value="{{ item.quantity }}" min="0" data-qty-input>
                <button type="button" class="cart-page__qty-btn" data-qty-increase aria-label="Increase">
                  {% render 'icon-plus' %}
                </button>
              </div>

              <button type="button" class="cart-page__item-remove" data-remove-item aria-label="Remove">
                {% render 'icon-trash' %}
              </button>
            </div>
          {% endfor %}
        </div>

        <div class="cart-page__summary">
          <h2 class="cart-page__summary-title">Order Summary</h2>

          <div class="cart-page__summary-row">
            <span>Subtotal</span>
            <span>{{ cart.total_price | money }}</span>
          </div>

          <div class="cart-page__summary-row">
            <span>Shipping</span>
            <span>Calculated at checkout</span>
          </div>

          <div class="cart-page__summary-total">
            <span>Total</span>
            <span>{{ cart.total_price | money }}</span>
          </div>

          {% if section.settings.enable_cart_note %}
            <div class="cart-page__note">
              <label for="cart-note" class="cart-page__note-label">Order Note</label>
              <textarea id="cart-note" class="cart-page__note-input" placeholder="Add a note to your order..." data-cart-note>{{ cart.note }}</textarea>
            </div>
          {% endif %}

          <form action="{{ routes.cart_url }}" method="post">
            <button type="submit" name="checkout" class="cart-page__checkout">
              Proceed to Checkout
            </button>
          </form>

          <a href="{{ routes.all_products_collection_url }}" class="cart-page__continue">
            Continue Shopping
          </a>
        </div>
      </div>
    {% else %}
      <div class="cart-page__empty">
        <div class="cart-page__empty-icon">
          {% render 'icon-cart' %}
        </div>
        <h2 class="cart-page__empty-title">Your cart is empty</h2>
        <p class="cart-page__empty-text">Looks like you haven't added anything to your cart yet.</p>
        <a href="{{ routes.all_products_collection_url }}" class="cart-page__empty-btn">Start Shopping</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Cart Page",
  "tag": "section",
  "class": "section-main-cart",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_cart_note",
      "label": "Enable Cart Note",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_cart_recommendations",
      "label": "Show Cart Recommendations",
      "default": true
    }
  ]
}
{% endschema %}
