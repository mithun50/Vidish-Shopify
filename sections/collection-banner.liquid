{%- style -%}
  .collection-banner {
    position: relative;
    background: var(--color-background-secondary);
    padding: 60px 0;
    margin-bottom: var(--section-spacing);
  }

  .collection-banner--with-image {
    min-height: 300px;
    display: flex;
    align-items: center;
  }

  .collection-banner__image {
    position: absolute;
    inset: 0;
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  .collection-banner--with-image::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(to right, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 100%);
    z-index: 1;
  }

  .collection-banner__content {
    position: relative;
    z-index: 2;
  }

  .collection-banner__title {
    font-size: clamp(28px, 4vw, 42px);
    font-weight: 700;
    margin-bottom: 12px;
  }

  .collection-banner--with-image .collection-banner__title {
    color: white;
  }

  .collection-banner__description {
    font-size: 16px;
    color: var(--color-text-light);
    max-width: 600px;
    line-height: 1.7;
  }

  .collection-banner--with-image .collection-banner__description {
    color: rgba(255,255,255,0.9);
  }

  @media (max-width: 767px) {
    .collection-banner {
      padding: 40px 0;
    }

    .collection-banner--with-image {
      min-height: 200px;
    }
  }
{%- endstyle -%}

{% assign has_image = collection.image and section.settings.show_collection_image %}

<section class="collection-banner {% if has_image %}collection-banner--with-image{% endif %}">
  {% if has_image %}
    {{ collection.image | image_url: width: 1920 | image_tag: class: 'collection-banner__image', loading: 'eager' }}
  {% endif %}

  <div class="container">
    <div class="collection-banner__content">
      <h1 class="collection-banner__title">{{ collection.title }}</h1>
      {% if collection.description != blank and section.settings.show_collection_description %}
        <div class="collection-banner__description">{{ collection.description }}</div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection Banner",
  "tag": "section",
  "class": "section-collection-banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "label": "Show Collection Description",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "label": "Show Collection Image",
      "default": true
    }
  ]
}
{% endschema %}
